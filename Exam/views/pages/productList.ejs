<%- include('../partials/header', { title: "Products" }) %>

<h2>All Products</h2>

<div class="grid">
  
  <% if (products && products.length > 0) { %>

    <% products.forEach(p => { %>
      <div class="card">
        <h3><%= p.title %></h3>
        <p><%= p.description %></p>
        <p>Price: â‚¹<%= p.price %></p>

        <% if (p.image) { %>
          <img src="<%= p.image %>" width="200" />
        <% } %>

      </div>
    <% }) %>

  <% } else { %>
    <p>No products found</p>
  <% } %>

</div>

